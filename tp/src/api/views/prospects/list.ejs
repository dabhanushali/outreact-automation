<%
let content = `
<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <div>
        <h1><i class="bi bi-building"></i> Company Prospects</h1>
        <p class="text-muted">Manage discovered companies</p>
      </div>
      <div class="btn-group">
        <a href="/prospects/new" class="btn btn-primary">
          <i class="bi bi-plus-lg"></i> Add Prospect
        </a>
        <a href="/prospects/export${filters.campaign ? '?campaign=' + filters.campaign : ''}${filters.source ? (filters.campaign ? '&' : '?') + 'source=' + filters.source : ''}${filters.status ? (filters.campaign || filters.source ? '&' : '?') + 'status=' + filters.status : ''}${filters.search ? (filters.campaign || filters.source || filters.status ? '&' : '?') + 'search=' + encodeURIComponent(filters.search) : ''}" class="btn btn-success">
          <i class="bi bi-file-earmark-spreadsheet"></i> Export CSV
        </a>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <form method="GET" action="/prospects" class="row g-3">
            <div class="col-md-3">
              <select name="campaign" class="form-select">
                <option value="">All Campaigns</option>
                ${campaigns.map(c => `<option value="${c.id}" ${filters.campaign == c.id ? 'selected' : ''}>${c.name}</option>`).join('')}
              </select>
            </div>
            <div class="col-md-3">
              <select name="source" class="form-select">
                <option value="">All Sources</option>
                ${sources.map(s => `<option value="${s}" ${filters.source == s ? 'selected' : ''}>${s}</option>`).join('')}
              </select>
            </div>
            <div class="col-md-3">
              <select name="status" class="form-select">
                <option value="">All Status</option>
                <option value="with_emails" ${filters.status === 'with_emails' ? 'selected' : ''}>With Emails</option>
                <option value="without_emails" ${filters.status === 'without_emails' ? 'selected' : ''}>Without Emails</option>
              </select>
            </div>
            <div class="col-md-3">
              <input type="text" name="search" class="form-control" placeholder="Search..." value="${filters.search || ''}">
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-funnel"></i> Apply Filters
              </button>
              <a href="/prospects" class="btn btn-secondary">Clear</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Prospects Table -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Domain</th>
                  <th>Company</th>
                  <th>Location</th>
                  <th>Emails</th>
                  <th>Source</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
`;
prospects.forEach(prospect => {
  content += `
                <tr>
                  <td><a href="/prospects/${prospect.id}">${prospect.domain}</a></td>
                  <td>${prospect.company_name || '-'}</td>
                  <td>${prospect.city || '-'}${prospect.country ? ', ' + prospect.country : ''}</td>
                  <td>
                    <span class="badge bg-${prospect.email_count > 0 ? 'success' : 'secondary'}">
                      ${prospect.email_count} emails
                    </span>
                  </td>
                  <td><span class="badge bg-info">${prospect.last_source_type || 'unknown'}</span></td>
                  <td>${new Date(prospect.created_at).toLocaleDateString()}</td>
                  <td>
                    <div class="btn-group btn-group-sm">
                      <a href="/prospects/${prospect.id}" class="btn btn-outline-primary" title="View">
                        <i class="bi bi-eye"></i>
                      </a>
                      <a href="/prospects/${prospect.id}/edit" class="btn btn-outline-secondary" title="Edit">
                        <i class="bi bi-pencil"></i>
                      </a>
                      <a href="/emails/new?prospect_id=${prospect.id}" class="btn btn-outline-success" title="Add Email">
                        <i class="bi bi-plus-lg"></i>
                      </a>
                      <form method="POST" action="/prospects/${prospect.id}/delete" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger" title="Delete" onclick="return confirm('Delete this prospect and all associated data?');">
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                      <a href="https://${prospect.domain}" target="_blank" class="btn btn-outline-info" title="Visit Website">
                        <i class="bi bi-box-arrow-up-right"></i>
                      </a>
                    </div>
                  </td>
                </tr>
  `;
});
if (prospects.length === 0) {
  content += `
                <tr>
                  <td colspan="7" class="text-center text-muted py-4">
                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                    No prospects found matching your criteria.
                  </td>
                </tr>
  `;
}
content += `
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
`;
%>
<%- include('../layout', { title: 'Prospects - Outreach Admin', activePage: 'prospects', content: content, user: user }) %>
