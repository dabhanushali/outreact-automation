<%
let content = `
<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <div>
        <h1><i class="bi bi-journal-richtext"></i> Blog Prospects</h1>
        <p class="text-muted">Manage discovered blogs</p>
      </div>
      <div class="btn-group">
        <a href="/blog-prospects/new" class="btn btn-primary">
          <i class="bi bi-plus-lg"></i> Add Blog Prospect
        </a>
        <a href="/prospects" class="btn btn-outline-secondary">
          <i class="bi bi-building"></i> View Companies
        </a>
        <a href="/blog-prospects/export${filters.campaign ? '?campaign=' + filters.campaign : ''}${filters.source ? (filters.campaign ? '&' : '?') + 'source=' + filters.source : ''}${filters.has_email ? (filters.campaign || filters.source ? '&' : '?') + 'has_email=' + filters.has_email : ''}${filters.status ? (filters.campaign || filters.source || filters.has_email ? '&' : '?') + 'status=' + filters.status : ''}${filters.search ? (filters.campaign || filters.source || filters.has_email || filters.status ? '&' : '?') + 'search=' + encodeURIComponent(filters.search) : ''}" class="btn btn-success">
          <i class="bi bi-file-earmark-spreadsheet"></i> Export CSV
        </a>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center" style="cursor: pointer;" onclick="toggleFilters()">
          <h6 class="mb-0"><i class="bi bi-funnel me-2"></i>Filters</h6>
          <i class="bi bi-chevron-down" id="filterToggleIcon"></i>
        </div>
        <div class="card-body" id="filtersBody">
          <form method="GET" action="/blog-prospects">
            <div class="row g-3">
              <div class="col-md-3">
                <label class="form-label small fw-semibold"><i class="bi bi-megaphone me-1"></i>Campaign</label>
                <select name="campaign" class="form-select form-select-sm">
                  <option value="">All Campaigns</option>
                  ${campaigns.map(c => `<option value="${c.id}" ${filters.campaign == c.id ? 'selected' : ''}>${c.name}</option>`).join('')}
                </select>
              </div>
              <div class="col-md-3">
                <label class="form-label small fw-semibold"><i class="bi bi-link-45deg me-1"></i>Source</label>
                <select name="source" class="form-select form-select-sm">
                  <option value="">All Sources</option>
                  <option value="blog" ${filters.source === 'blog' ? 'selected' : ''}>Blog Search</option>
                  <option value="google" ${filters.source === 'google' ? 'selected' : ''}>Google</option>
                  <option value="other" ${filters.source === 'other' ? 'selected' : ''}>Other</option>
                </select>
              </div>
              <div class="col-md-2">
                <label class="form-label small fw-semibold"><i class="bi bi-envelope me-1"></i>Emails</label>
                <select name="has_email" class="form-select form-select-sm">
                  <option value="">Has Emails?</option>
                  <option value="yes" ${filters.has_email === 'yes' ? 'selected' : ''}>Has Emails (>0)</option>
                  <option value="no" ${filters.has_email === 'no' ? 'selected' : ''}>No Emails (0)</option>
                </select>
              </div>
              <div class="col-md-2">
                <label class="form-label small fw-semibold"><i class="bi bi-info-circle me-1"></i>Status</label>
                <select name="status" class="form-select form-select-sm">
                  <option value="">All Status</option>
                  <option value="with_emails" ${filters.status === 'with_emails' ? 'selected' : ''}>Extracted</option>
                  <option value="without_emails" ${filters.status === 'without_emails' ? 'selected' : ''}>Not Extracted</option>
                </select>
              </div>
              <div class="col-md-2">
                <label class="form-label small fw-semibold"><i class="bi bi-search me-1"></i>Search</label>
                <input type="text" name="search" class="form-control form-control-sm" placeholder="Search..." value="${filters.search || ''}">
              </div>
            </div>
            <div class="row mt-3">
              <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-check-circle"></i> Apply Filters</button>
                <a href="/blog-prospects" class="btn btn-outline-secondary btn-sm"><i class="bi bi-x-circle"></i> Clear All</a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Blog Prospects Table -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Domain</th>
                  <th>Blog Name</th>
                  <th>Emails</th>
                  <th>Source</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
${prospects.map(prospect => `
                <tr>
                  <td><a href="/blog-prospects/${prospect.id}">${prospect.domain}</a></td>
                  <td>${prospect.blog_name || '-'}</td>
                  <td>
                    <span class="badge bg-${prospect.email_count > 0 ? 'success' : 'secondary'}">
                      ${prospect.email_count}
                    </span>
                  </td>
                  <td><span class="badge bg-info">${prospect.last_source_type || 'unknown'}</span></td>
                  <td>${new Date(prospect.created_at).toLocaleDateString()}</td>
                  <td>
                    <div class="btn-group btn-group-sm">
                      <a href="/blog-prospects/${prospect.id}" class="btn btn-outline-primary" title="View">
                        <i class="bi bi-eye"></i>
                      </a>
                      <a href="/blog-prospects/${prospect.id}/edit" class="btn btn-outline-secondary" title="Edit">
                        <i class="bi bi-pencil"></i>
                      </a>
                      <a href="/blog-emails/new?blog_prospect_id=${prospect.id}" class="btn btn-outline-success" title="Add Email">
                        <i class="bi bi-plus-lg"></i>
                      </a>
                      <form method="POST" action="/blog-prospects/${prospect.id}/delete" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger" title="Delete" onclick="return confirm('Delete this blog prospect and all associated data?');">
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                      <a href="https://${prospect.domain}" target="_blank" class="btn btn-outline-info" title="Visit Website">
                        <i class="bi bi-box-arrow-up-right"></i>
                      </a>
                    </div>
                  </td>
                </tr>`).join('')}

${prospects.length === 0 ? `
                <tr>
                  <td colspan="6" class="text-center text-muted py-4">
                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                    No blog prospects found.
                  </td>
                </tr>` : ''}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function toggleFilters() {
  const body = document.getElementById('filtersBody');
  const icon = document.getElementById('filterToggleIcon');
  if (body.style.display === 'none') {
    body.style.display = 'block';
    icon.classList.remove('bi-chevron-down');
    icon.classList.add('bi-chevron-up');
  } else {
    body.style.display = 'none';
    icon.classList.remove('bi-chevron-up');
    icon.classList.add('bi-chevron-down');
  }
}
</script>
`;
%>
<%- include('../layout', { title: 'Blog Prospects - Outreach Admin', activePage: 'prospects', content: content, user: user }) %>
