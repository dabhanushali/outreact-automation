<%
let content = `
<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <div>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/blog-prospects">Blog Prospects</a></li>
            <li class="breadcrumb-item active">${prospect.domain}</li>
          </ol>
        </nav>
        <h1><i class="bi bi-journal-richtext"></i> ${prospect.blog_name || prospect.domain}</h1>
        <p class="text-muted mb-0">
          <a href="https://${prospect.domain}" target="_blank">${prospect.domain}</a>
        </p>
      </div>
      <div>
        <div class="btn-group">
          <a href="/blog-emails/new?blog_prospect_id=${prospect.id}" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Add Email
          </a>
          <a href="/blog-prospects/${prospect.id}/edit" class="btn btn-outline-secondary">
            <i class="bi bi-pencil"></i> Edit
          </a>
          <form method="POST" action="/blog-prospects/${prospect.id}/delete" class="d-inline">
            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this blog prospect? This will also delete all associated emails and leads.');">
              <i class="bi bi-trash"></i> Delete
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <i class="bi bi-info-circle"></i> Blog Information
        </div>
        <div class="card-body">
          <table class="table table-sm">
            <tr><th>Domain:</th><td>${prospect.domain}</td></tr>
            <tr><th>Blog Name:</th><td>${prospect.blog_name || '-'}</td></tr>
            <tr><th>Source:</th><td>${prospect.last_source_type || '-'}</td></tr>
            <tr><th>Created:</th><td>${new Date(prospect.created_at).toLocaleString()}</td></tr>
          </table>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <i class="bi bi-envelope"></i> Emails (${emails.length})
        </div>
        <div class="card-body">
${emails.length > 0 ? `
          <div class="list-group">
${emails.map(email => `
            <div class="list-group-item">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <a href="/blog-emails/${email.id}">${email.email}</a>
                  <div class="small text-muted">
                    ${email.is_domain_match ? `<span class="badge bg-success">Match</span>` : ''}
                    ${email.is_generic ? `<span class="badge bg-warning text-dark">Generic</span>` : ''}
                  </div>
                </div>
                <div class="btn-group btn-group-sm">
                  <a href="/blog-emails/${email.id}/edit" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-pencil"></i>
                  </a>
                  <form method="POST" action="/blog-emails/${email.id}/delete" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete this email?');">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </div>
              </div>
            </div>`).join('')}
          </div>` : `
          <p class="text-muted mb-0">No emails found.</p>`}
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div>
            <i class="bi bi-diagram-3"></i> Campaigns (${leads.length})
          </div>
          <button class="btn btn-primary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#addToCampaignForm">
            <i class="bi bi-plus-lg"></i> Add to Campaign
          </button>
        </div>
        <div class="collapse" id="addToCampaignForm">
          <div class="card-body bg-light">
            <form method="POST" action="/blog-prospects/${prospect.id}/add-to-campaign">
              <div class="row align-items-end">
                <div class="col-md-6">
                  <label for="campaign_id" class="form-label">Select Campaign</label>
                  <select class="form-select" id="campaign_id" name="campaign_id" required>
                    <option value="">-- Select Campaign --</option>
${typeof allCampaigns !== 'undefined' && allCampaigns.length > 0 ? allCampaigns.map(c => `
                    <option value="${c.id}">${c.brand_name} - ${c.name}</option>`).join('') : '<option value="" disabled>No campaigns available</option>'}
                  </select>
                </div>
                <div class="col-md-3">
                  <label for="source_type" class="form-label">Source</label>
                  <select class="form-select" id="source_type" name="source_type">
                    <option value="manual">Manual</option>
                    <option value="blog">Blog Search</option>
                    <option value="google">Google</option>
                    <option value="directory">Directory</option>
                  </select>
                </div>
                <div class="col-md-3">
                  <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-plus-lg"></i> Add
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="card-body">
${leads.length > 0 ? `
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Campaign</th>
                  <th>Brand</th>
                  <th>Status</th>
                  <th>Source</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
${leads.map(lead => `
                <tr>
                  <td><a href="/leads?campaign=${lead.campaign_id}">${lead.campaign_name}</a></td>
                  <td>${lead.brand_name}</td>
                  <td><span class="badge bg-${lead.status === 'NEW' ? 'primary' : lead.status === 'READY' ? 'success' : 'secondary'}">${lead.status}</span></td>
                  <td>${lead.source_type || '-'}</td>
                  <td>
                    <a href="/leads/${lead.id}" class="btn btn-outline-primary btn-sm">View</a>
                  </td>
                </tr>`).join('')}
              </tbody>
            </table>
          </div>` : `
          <p class="text-muted mb-0">This blog prospect is not associated with any campaigns yet.</p>`}
        </div>
      </div>
    </div>
  </div>
</div>
`;
%>
<%- include('../layout', { title: prospect.domain + ' - Blog Prospect', activePage: 'prospects', content: content, user: user }) %>
