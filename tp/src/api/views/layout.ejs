<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body>
    <% if (typeof user !== 'undefined' && user.authenticated) { %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <i class="bi bi-megaphone"></i> Outreach Admin
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a
                class="nav-link <%= activePage === 'dashboard' ? 'active' : '' %>"
                href="/"
              >
                <i class="bi bi-speedometer2"></i> Dashboard
              </a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle <%= activePage && activePage.startsWith('campaigns') ? 'active' : '' %>"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
              >
                <i class="bi bi-funnel"></i> Campaigns
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="/campaigns"
                    ><i class="bi bi-list"></i> All Campaigns</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/campaigns/new"
                    ><i class="bi bi-plus-circle"></i> New Campaign</a
                  >
                </li>
              </ul>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle <%= activePage && activePage.startsWith('prospects') ? 'active' : '' %>"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
              >
                <i class="bi bi-building"></i> Prospects
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="/prospects"
                    ><i class="bi bi-building"></i> Companies</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/blog-prospects"
                    ><i class="bi bi-file-text"></i> Blogs</a
                  >
                </li>
              </ul>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle <%= activePage && activePage.startsWith('emails') ? 'active' : '' %>"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
              >
                <i class="bi bi-envelope"></i> Emails
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="/emails"
                    ><i class="bi bi-envelope"></i> Company Emails</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/blog-emails"
                    ><i class="bi bi-file-text"></i> Blog Emails</a
                  >
                </li>
              </ul>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle <%= activePage && activePage.startsWith('leads') ? 'active' : '' %>"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
              >
                <i class="bi bi-people"></i> Leads
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="/leads/general"
                    ><i class="bi bi-people"></i> General Leads</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/leads"
                    ><i class="bi bi-link-45deg"></i> Blog Leads</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/outreach-logs"
                    ><i class="bi bi-send"></i> Outreach Logs</a
                  >
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" href="/email-outreach"
                    ><i class="bi bi-envelope-paper"></i> Email Campaign</a
                  >
                </li>
              </ul>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle <%= activePage && activePage.startsWith('settings') ? 'active' : '' %>"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
              >
                <i class="bi bi-gear"></i> Settings
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="/settings/brands"
                    ><i class="bi bi-tag"></i> Brands</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/settings/daily-limits"
                    ><i class="bi bi-calendar-check"></i> Daily Limits</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/settings/followup"
                    ><i class="bi bi-envelope-arrow-up"></i> Follow-up Settings</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/settings/keywords"
                    ><i class="bi bi-key"></i> Keywords</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/settings/modifiers"
                    ><i class="bi bi-sliders"></i> Modifiers</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/settings/exclusions"
                    ><i class="bi bi-ban"></i> Exclusions</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/settings/geo"
                    ><i class="bi bi-geo-alt"></i> Geographic</a
                  >
                </li>
              </ul>
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= activePage === 'directories' ? 'active' : '' %>"
                href="/directories"
              >
                <i class="bi bi-folder"></i> Directories
              </a>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/logout" title="Logout">
                <i class="bi bi-box-arrow-right"></i> Logout
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <% } %>

    <main
      class="<%= typeof user !== 'undefined' && user.authenticated ? 'container-fluid py-4' : '' %>"
    >
      <%- typeof content !== 'undefined' ? content : '' %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="/js/main.js"></script>
    <%- typeof scripts !== 'undefined' ? scripts : '' %>
  </body>
</html>
