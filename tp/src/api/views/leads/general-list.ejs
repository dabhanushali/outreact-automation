<%
let content = `
<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12">
      <h1><i class="bi bi-envelope-paper"></i> General Outreach Leads</h1>
      <p class="text-muted">Master list of all contactable companies (Prospects with Emails)</p>
    </div>
  </div>

  <!-- Filters -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <form method="GET" action="/leads/general" class="row g-3">
            <div class="col-md-5">
              <input type="text" name="search" class="form-control" placeholder="Search domain, company, or email..." value="${filters.search || ''}">
            </div>
            <div class="col-md-4">
              <select name="source" class="form-select">
                <option value="">All Sources</option>
${sources.map(s => `
                <option value="${s}" ${filters.source === s ? 'selected' : ''}>${s}</option>`).join('')}
              </select>
            </div>
            <div class="col-md-3">
              <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
          </form>
          <a href="/leads/general" class="btn btn-secondary mt-2">Clear Filters</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bulk Actions -->
  <div class="row mb-3">
    <div class="col-12">
      <div class="btn-group">
        <button class="btn btn-sm btn-outline-info" onclick="showAddToQueueModal()">
          <i class="bi bi-envelope-plus"></i> Queue Selected
        </button>
        <button class="btn btn-sm btn-outline-warning" onclick="startSending()">
          <i class="bi bi-play-fill"></i> Process Queue
        </button>
      </div>
    </div>
  </div>

  <!-- Emails Table -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th><input type="checkbox" onchange="toggleAll(this)"></th>
                  <th>Domain / Company</th>
                  <th>Email</th>
                  <th>Info</th>
                  <th>Email Status</th>
                  <th>Source</th>
                  <th>Added</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
${emails.map(e => {
                // Determine email status color
                let emailStatusColor = 'secondary';
                let emailStatusText = e.latest_outreach_status || 'Not Sent';
                if (e.latest_outreach_status) {
                  switch(e.latest_outreach_status) {
                    case 'SENT': emailStatusColor = 'primary'; break;
                    case 'OPENED': emailStatusColor = 'info'; break;
                    case 'REPLIED': emailStatusColor = 'success'; break;
                    case 'REJECTED': emailStatusColor = 'danger'; break;
                  }
                }

                // Format email category for display
                let emailCategory = '';
                if (e.latest_email_category) {
                  emailCategory = e.latest_email_category === 'main' ? 'Main' :
                                 e.latest_email_category === 'manual' ? 'Manual' :
                                 'Follow-up ' + e.latest_email_category.split('_')[1];
                }

                return `
                <tr>
                  <td>
                    <input type="checkbox" name="email_ids" value="${e.email_id}"
                           data-prospect-id="${e.prospect_id}"
                           data-email="${e.email}">
                  </td>
                  <td>
                    <strong><a href="/prospects/${e.prospect_id}">${e.company_name || e.domain}</a></strong><br>
                    <small class="text-muted"><a href="https://${e.domain}" target="_blank">${e.domain}</a></small>
                  </td>
                  <td>
                    <a href="mailto:${e.email}">${e.email}</a>
                    ${e.is_domain_match ? '<span class="badge bg-success" title="Domain Match">DM</span>' : ''}
                    ${e.is_generic ? '<span class="badge bg-warning text-dark" title="Generic Email">G</span>' : ''}
                  </td>
                  <td>
                    ${e.city ? `<small><i class="bi bi-geo-alt"></i> ${e.city}</small>` : '-'}
                  </td>
                  <td>
                    ${e.latest_outreach_status ?
                      `<span class="badge bg-${emailStatusColor}">${emailStatusText}</span>` +
                      (emailCategory ? ` <small class="text-muted">(${emailCategory})</small>` : '')
                      : '<span class="text-muted">-</span>'}
                    ${e.latest_email_sent ? `<br><small class="text-muted">${new Date(e.latest_email_sent).toLocaleDateString()}</small>` : ''}
                  </td>
                  <td><span class="badge bg-info">${e.source_page || 'unknown'}</span></td>
                  <td>${new Date(e.created_at).toLocaleDateString()}</td>
                  <td>
                    <a href="/emails/${e.email_id}/edit" class="btn btn-sm btn-outline-secondary"><i class="bi bi-pencil"></i></a>
                  </td>
                </tr>`;
              }).join('')}

${emails.length === 0 ? `
                <tr>
                  <td colspan="8" class="text-center text-muted py-4">No emails found matching your filters.</td>
                </tr>` : ''}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add to Queue Modal -->
<div class="modal fade" id="addToQueueModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Queue General Outreach</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="queueForm">
          <p>Selected Emails: <span id="queueCount">0</span></p>
          
          <div class="alert alert-info">
            <small>These emails will be added as <strong>New Leads</strong> to the selected campaign if they don't already exist.</small>
          </div>

          <div class="mb-3">
            <label class="form-label">Select Campaign to Assign</label>
            <select name="campaign_id" class="form-select" required>
              <option value="">Choose a campaign...</option>
              ${campaigns.map(c => `<option value="${c.id}">${c.name}</option>`).join('')}
            </select>
          </div>

          <div class="mb-3">
            <label class="form-label">Select Email Template</label>
            <select name="template_id" class="form-select" required>
              <option value="">Choose a template...</option>
              ${templates.map(t => `<option value="${t.id}">${t.name}</option>`).join('')}
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="submitToQueue()">Queue Emails</button>
      </div>
    </div>
  </div>
</div>

<script>
function toggleAll(checkbox) {
  document.querySelectorAll('input[name="email_ids"]').forEach(cb => cb.checked = checkbox.checked);
}

function showAddToQueueModal() {
  const selected = document.querySelectorAll('input[name="email_ids"]:checked');
  if (selected.length === 0) {
    alert('Please select at least one email');
    return;
  }
  
  document.getElementById('queueCount').textContent = selected.length;
  const modal = new bootstrap.Modal(document.getElementById('addToQueueModal'));
  modal.show();
}

function submitToQueue() {
  const selected = document.querySelectorAll('input[name="email_ids"]:checked');
  const items = [];
  
  selected.forEach(cb => {
    items.push({
      email_id: cb.value,
      prospect_id: cb.dataset.prospectId
    });
  });
  
  const campaignId = document.querySelector('#queueForm select[name="campaign_id"]').value;
  const templateId = document.querySelector('#queueForm select[name="template_id"]').value;
  
  if (!campaignId || !templateId) {
    alert('Please select a campaign and a template');
    return;
  }
  
  const btn = document.querySelector('#addToQueueModal .btn-primary');
  const originalText = btn.textContent;
  btn.disabled = true;
  btn.textContent = 'Processing...';
  
  // Use new special route for general leads
  fetch('/email-outreach/queue/general-bulk', {
    method: 'POST',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify({
      items: items,
      campaign_id: campaignId,
      template_id: templateId
    })
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      alert('Successfully processed:\\nleads created/found: ' + data.leadsProcessed + '\\nEmails Queued: ' + data.queued + '\\nFailures: ' + data.failed);
      location.reload();
    } else {
      alert('Error: ' + data.error);
    }
  })
  .catch(err => alert('Error: ' + err.message))
  .finally(() => {
    btn.disabled = false;
    btn.textContent = originalText;
  });
}

function startSending() {
  if (!confirm('Start processing the email queue now?')) return;
  
  fetch('/email-outreach/queue/send', {
    method: 'POST',
    headers: {'Content-Type': 'application/json'}
  })
  .then(res => res.json())
  .then(data => {
    alert(data.message || 'Started sending emails in background');
  })
  .catch(err => alert('Error starting queue: ' + err.message));
}
</script>
`;
%>
<%- include('../layout', { title: 'General Outreach - Leads', activePage: 'leads-general', content: content, user: user }) %>
