<%
let content = `
<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12">
      <h1><i class="bi bi-envelope-paper"></i> General Outreach Leads</h1>
      <p class="text-muted">Master list of all contactable companies (Prospects with Emails)</p>
    </div>
  </div>

  <!-- Filters -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center" style="cursor: pointer;" onclick="toggleFilters()">
          <div>
            <h6 class="mb-0"><i class="bi bi-funnel me-2"></i>Filters</h6>
          </div>
          <i class="bi bi-chevron-down" id="filterToggleIcon"></i>
        </div>
        <div class="card-body" id="filtersBody">
          <!-- Quick Date Filters -->
          <div class="mb-4 p-3 bg-light rounded">
            <label class="form-label fw-bold small text-muted">
              <i class="bi bi-calendar3 me-1"></i>Quick Date Filters
            </label>
            <div class="d-flex flex-wrap gap-2">
              <button type="button" class="btn btn-sm btn-outline-primary" onclick="setDateFilter('today')">
                <i class="bi bi-calendar-day"></i> Today
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary" onclick="setDateFilter('yesterday')">
                <i class="bi bi-calendar-minus"></i> Yesterday
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary" onclick="setDateFilter('last7days')">
                Last 7 Days
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary" onclick="setDateFilter('last30days')">
                Last 30 Days
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary" onclick="setDateFilter('thismonth')">
                This Month
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary" onclick="setDateFilter('lastmonth')">
                Last Month
              </button>
              <button type="button" class="btn btn-sm btn-outline-warning" onclick="setDateFilter('clear')">
                <i class="bi bi-x-circle"></i> Clear Dates
              </button>
            </div>
          </div>
          <form method="GET" action="/leads/general" id="filterForm">
            <div class="row g-3">
              <div class="col-md-3">
                <label class="form-label small fw-semibold">
                  <i class="bi bi-megaphone me-1"></i>Campaign
                </label>
                <select name="campaign" class="form-select form-select-sm">
                  <option value="">All Campaigns</option>
${campaigns.map(c => `
                  <option value="${c.id}" ${filters.campaign == c.id ? 'selected' : ''}>${c.name}</option>`).join('')}
                </select>
              </div>
              <div class="col-md-3">
                <label class="form-label small fw-semibold">
                  <i class="bi bi-info-circle me-1"></i>Lead Status
                </label>
                <select name="status" class="form-select form-select-sm">
                  <option value="">All Statuses</option>
${statuses.map(s => `
                  <option value="${s}" ${filters.status === s ? 'selected' : ''}>${s}</option>`).join('')}
                </select>
              </div>
              <div class="col-md-3">
                <label class="form-label small fw-semibold">
                  <i class="bi bi-link-45deg me-1"></i>Source
                </label>
                <select name="source" class="form-select form-select-sm">
                  <option value="">All Sources</option>
${sources.map(s => `
                  <option value="${s}" ${filters.source === s ? 'selected' : ''}>${s}</option>`).join('')}
                </select>
              </div>
              <div class="col-md-3">
                <label class="form-label small fw-semibold">
                  <i class="bi bi-calendar-range me-1"></i>Date Range
                </label>
                <div class="input-group input-group-sm">
                  <input type="date" name="date_from" class="form-control" placeholder="From" value="${filters.date_from || ''}" id="date_from">
                  <span class="input-group-text">to</span>
                  <input type="date" name="date_to" class="form-control" placeholder="To" value="${filters.date_to || ''}" id="date_to">
                </div>
              </div>
            </div>
            <div class="row mt-3">
              <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-sm">
                  <i class="bi bi-check-circle"></i> Apply Filters
                </button>
                <a href="/leads/general" class="btn btn-outline-secondary btn-sm">
                  <i class="bi bi-x-circle"></i> Clear All
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Bulk Actions -->
  <div class="row mb-3">
    <div class="col-12">
      <div class="btn-group">
        <button class="btn btn-sm btn-outline-info" onclick="showAddToQueueModal()">
          <i class="bi bi-envelope-plus"></i> Queue Selected
        </button>
        <button class="btn btn-sm btn-outline-warning" onclick="startSending()">
          <i class="bi bi-play-fill"></i> Process Queue
        </button>
      </div>
    </div>
  </div>

  <!-- Emails Table -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th><input type="checkbox" onchange="toggleAll(this)"></th>
                  <th>Domain</th>
                  <th>Company</th>
                  <th>Email</th>
                  <th>Campaign</th>
                  <th>Lead Status</th>
                  <th>Email Status</th>
                  <th>Source</th>
                  <th>Found</th>
                </tr>
              </thead>
              <tbody>
${emails.map(e => {
                // Determine email status color
                let emailStatusColor = 'secondary';
                let emailStatusText = e.latest_outreach_status || 'Not Sent';
                if (e.latest_outreach_status) {
                  switch(e.latest_outreach_status) {
                    case 'SENT': emailStatusColor = 'primary'; break;
                    case 'OPENED': emailStatusColor = 'info'; break;
                    case 'REPLIED': emailStatusColor = 'success'; break;
                    case 'REJECTED': emailStatusColor = 'danger'; break;
                  }
                }

                // Format email category for display
                let emailCategory = '';
                if (e.latest_email_category) {
                  emailCategory = e.latest_email_category === 'main' ? 'Main' :
                                 e.latest_email_category === 'manual' ? 'Manual' :
                                 'Follow-up ' + e.latest_email_category.split('_')[1];
                }

                // Determine lead status color
                const leadStatuses = ['NEW', 'READY', 'OUTREACH_SENT', 'REPLIED', 'REJECTED'];
                const leadStatus = e.lead_status || 'NEW';

                return `
                <tr>
                  <td>
                    <input type="checkbox" name="email_ids" value="${e.email_id}"
                           data-lead-id="${e.lead_id || ''}"
                           data-prospect-id="${e.prospect_id}"
                           data-email="${e.email}">
                  </td>
                  <td><a href="https://${e.domain}" target="_blank">${e.domain}</a></td>
                  <td><a href="/prospects/${e.prospect_id}">${e.company_name || '-'}</a></td>
                  <td>
                    <a href="mailto:${e.email}">${e.email}</a>
                    ${e.is_domain_match ? '<span class="badge bg-success" title="Domain Match">DM</span>' : ''}
                    ${e.is_generic ? '<span class="badge bg-warning text-dark" title="Generic Email">G</span>' : ''}
                  </td>
                  <td>${e.campaign_name ? `<a href="/campaigns/${e.campaign_id}">${e.campaign_name}</a>` : '-'}</td>
                  <td>
                    ${e.lead_id ?
                      `<select class="form-select form-select-sm" style="width: auto;" onchange="updateLeadStatus(${e.lead_id}, this.value)">
${leadStatuses.map(s => `
                        <option value="${s}" ${leadStatus === s ? 'selected' : ''}>${s}</option>`).join('')}
                      </select>` :
                      '<span class="text-muted">-</span>'}
                  </td>
                  <td>
                    ${e.latest_outreach_status ?
                      `<span class="badge bg-${emailStatusColor}">${emailStatusText}</span>` +
                      (emailCategory ? ` <small class="text-muted">(${emailCategory})</small>` : '')
                      : '<span class="text-muted">-</span>'}
                    ${e.latest_email_sent ? `<br><small class="text-muted">${new Date(e.latest_email_sent).toLocaleDateString()}</small>` : ''}
                  </td>
                  <td><span class="badge bg-info">${e.source_page || 'unknown'}</span></td>
                  <td>${e.lead_found_at ? new Date(e.lead_found_at).toLocaleDateString() : new Date(e.created_at).toLocaleDateString()}</td>
                </tr>`;
              }).join('')}

${emails.length === 0 ? `
                <tr>
                  <td colspan="9" class="text-center text-muted py-4">No emails found matching your filters.</td>
                </tr>` : ''}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add to Queue Modal -->
<div class="modal fade" id="addToQueueModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Queue General Outreach</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="queueForm">
          <p>Selected Emails: <span id="queueCount">0</span></p>

          <div class="alert alert-info">
            <small>Emails will be queued using their <strong>existing campaigns</strong>. If a lead doesn't exist, it will be created automatically.</small>
          </div>

          <div class="mb-3">
            <label class="form-label">Select Email Template</label>
            <select name="template_id" class="form-select" required>
              <option value="">Choose a template...</option>
              ${templates.map(t => `<option value="${t.id}">${t.name}</option>`).join('')}
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="submitToQueue()">Queue Emails</button>
      </div>
    </div>
  </div>
</div>

<script>
function toggleAll(checkbox) {
  document.querySelectorAll('input[name="email_ids"]').forEach(cb => cb.checked = checkbox.checked);
}

function showAddToQueueModal() {
  const selected = document.querySelectorAll('input[name="email_ids"]:checked');
  if (selected.length === 0) {
    alert('Please select at least one email');
    return;
  }
  
  document.getElementById('queueCount').textContent = selected.length;
  const modal = new bootstrap.Modal(document.getElementById('addToQueueModal'));
  modal.show();
}

function submitToQueue() {
  const selected = document.querySelectorAll('input[name="email_ids"]:checked');

  if (selected.length === 0) {
    alert('Please select at least one email');
    return;
  }

  const templateId = document.querySelector('#queueForm select[name="template_id"]').value;

  if (!templateId) {
    alert('Please select a template');
    return;
  }

  const btn = document.querySelector('#addToQueueModal .btn-primary');
  const originalText = btn.textContent;
  btn.disabled = true;
  btn.textContent = 'Processing...';

  // Collect lead IDs and email IDs
  const leadIds = [];
  const emailIds = [];
  const itemsToCreate = []; // For prospects without leads

  selected.forEach(cb => {
    const leadId = cb.dataset.leadId;
    const emailId = cb.value;
    const prospectId = cb.dataset.prospectId;

    if (leadId) {
      // Lead already exists
      leadIds.push(leadId);
      emailIds.push(emailId);
    } else {
      // Need to create lead first
      itemsToCreate.push({
        email_id: emailId,
        prospect_id: prospectId
      });
    }
  });

  // Use new route that handles existing leads
  fetch('/email-outreach/queue/general-leads', {
    method: 'POST',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify({
      lead_ids: leadIds,
      email_ids: emailIds,
      items_to_create: itemsToCreate,
      template_id: templateId
    })
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      alert('Successfully processed:\\nLeads queued: ' + data.queued + '\\nFailed: ' + data.failed);
      location.reload();
    } else {
      alert('Error: ' + data.error);
    }
  })
  .catch(err => alert('Error: ' + err.message))
  .finally(() => {
    btn.disabled = false;
    btn.textContent = originalText;
  });
}

function startSending() {
  if (!confirm('Start processing the email queue now?')) return;

  fetch('/email-outreach/queue/send', {
    method: 'POST',
    headers: {'Content-Type': 'application/json'}
  })
  .then(res => res.json())
  .then(data => {
    alert(data.message || 'Started sending emails in background');
  })
  .catch(err => alert('Error starting queue: ' + err.message));
}

function updateLeadStatus(leadId, status) {
  fetch('/leads/' + leadId + '/status', {
    method: 'POST',
    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
    body: 'status=' + status
  }).then(() => location.reload());
}

function toggleFilters() {
  const body = document.getElementById('filtersBody');
  const icon = document.getElementById('filterToggleIcon');
  if (body.style.display === 'none') {
    body.style.display = 'block';
    icon.classList.remove('bi-chevron-down');
    icon.classList.add('bi-chevron-up');
  } else {
    body.style.display = 'none';
    icon.classList.remove('bi-chevron-up');
    icon.classList.add('bi-chevron-down');
  }
}

// Quick Date Filter Functions
function setDateFilter(filter) {
  const dateFrom = document.getElementById('date_from');
  const dateTo = document.getElementById('date_to');
  const today = new Date();

  // Clear existing dates
  dateFrom.value = '';
  dateTo.value = '';

  switch(filter) {
    case 'today':
      dateFrom.value = formatDate(today);
      dateTo.value = formatDate(today);
      break;
    case 'yesterday':
      const yesterday = new Date(today);
      yesterday.setDate(yesterday.getDate() - 1);
      dateFrom.value = formatDate(yesterday);
      dateTo.value = formatDate(yesterday);
      break;
    case 'last7days':
      const sevenDaysAgo = new Date(today);
      sevenDaysAgo.setDate(sevenDaysAgo.getDate() - 7);
      dateFrom.value = formatDate(sevenDaysAgo);
      dateTo.value = formatDate(today);
      break;
    case 'last30days':
      const thirtyDaysAgo = new Date(today);
      thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);
      dateFrom.value = formatDate(thirtyDaysAgo);
      dateTo.value = formatDate(today);
      break;
    case 'thismonth':
      const firstOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);
      dateFrom.value = formatDate(firstOfMonth);
      dateTo.value = formatDate(today);
      break;
    case 'lastmonth':
      const lastMonth = new Date(today.getFullYear(), today.getMonth() - 1, 1);
      const lastMonthEnd = new Date(today.getFullYear(), today.getMonth(), 0);
      dateFrom.value = formatDate(lastMonth);
      dateTo.value = formatDate(lastMonthEnd);
      break;
    case 'clear':
      // Dates already cleared
      break;
  }

  // Submit the form
  document.getElementById('filterForm').submit();
}

function formatDate(date) {
  const year = date.getFullYear();
  const month = String(date.getMonth() + 1).padStart(2, '0');
  const day = String(date.getDate()).padStart(2, '0');
  return year + '-' + month + '-' + day;
}
</script>
`;
%>
<%- include('../layout', { title: 'General Outreach - Leads', activePage: 'leads-general', content: content, user: user }) %>
