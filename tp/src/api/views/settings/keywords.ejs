<%
let content = `
<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/settings/keywords">Settings</a></li>
          <li class="breadcrumb-item active">Keywords</li>
        </ol>
      </nav>
      <h1><i class="bi bi-key"></i> Outreach Keywords</h1>
      <p class="text-muted">Manage search keywords for prospect discovery</p>
    </div>
  </div>

  <!-- Add Keyword Form -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <i class="bi bi-plus-circle"></i> Add New Keyword
        </div>
        <div class="card-body">
          <form method="POST" action="/settings/keywords" class="row g-3">
            <div class="col-md-10">
              <input type="text" name="phrase" class="form-control" placeholder="Enter keyword phrase" required>
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-primary w-100">Add</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Keywords Table -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Keyword Phrase</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
${keywords.map(kw => `
                <tr>
                  <td>${kw.id}</td>
                  <td><strong>${kw.phrase}</strong></td>
                  <td>${new Date(kw.created_at).toLocaleDateString()}</td>
                  <td>
                    <form method="POST" action="/settings/keywords/${kw.id}/delete"
                      onsubmit="return confirm('Delete this keyword?');"
                      style="display: inline;">
                      <button class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>`).join('')}

${keywords.length === 0 ? `
                <tr>
                  <td colspan="4" class="text-center text-muted py-4">No keywords found.</td>
                </tr>` : ''}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
`;
%>
<%- include('../layout', { title: 'Keywords - Settings', activePage: 'settings', content: content, user: user }) %>
