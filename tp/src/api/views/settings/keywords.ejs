<%
let content = `
<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/settings/keywords">Settings</a></li>
          <li class="breadcrumb-item active">Keywords</li>
        </ol>
      </nav>
      <h1><i class="bi bi-key"></i> Outreach Keywords</h1>
      <p class="text-muted">Manage search keywords for prospect discovery</p>
    </div>
  </div>

  <!-- Add Keyword Form -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <i class="bi bi-plus-circle"></i> Add New Keyword
        </div>
        <div class="card-body">
          <form method="POST" action="/settings/keywords" class="row g-3">
            <div class="col-md-8">
              <input type="text" name="phrase" class="form-control" placeholder="Enter keyword phrase" required>
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-primary w-100">Add</button>
            </div>
            <div class="col-md-2">
              <button type="button" class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#importCsvModal">
                <i class="bi bi-file-earmark-spreadsheet"></i> Import CSV
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Keywords Table -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Keyword Phrase</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
${keywords.map(kw => `
                <tr>
                  <td>${kw.id}</td>
                  <td><strong>${kw.phrase}</strong></td>
                  <td>${new Date(kw.created_at).toLocaleDateString()}</td>
                  <td>
                    <form method="POST" action="/settings/keywords/${kw.id}/delete"
                      onsubmit="return confirm('Delete this keyword?');"
                      style="display: inline;">
                      <button class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>`).join('')}

${keywords.length === 0 ? `
                <tr>
                  <td colspan="4" class="text-center text-muted py-4">No keywords found.</td>
                </tr>` : ''}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Import CSV Modal -->
<div class="modal fade" id="importCsvModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="POST" action="/settings/keywords/import-csv">
        <div class="modal-header">
          <h5 class="modal-title">Import Keywords from CSV</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">CSV File URL *</label>
            <input type="url" name="csv_url" class="form-control"
              placeholder="https://docs.google.com/spreadsheets/d/..."
              required>
            <div class="form-text">
              Paste the URL of a published CSV or Google Sheet. For Google Sheets, use File > Share > Publish to web.
            </div>
          </div>
          <div class="alert alert-info">
            <small><strong>CSV Format:</strong> The CSV should have a single column named "Keyword" or "Phrase"<br>
            Each row should contain one keyword phrase</small>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Import</button>
        </div>
      </form>
    </div>
  </div>
</div>
`;
%>
<%- include('../layout', { title: 'Keywords - Settings', activePage: 'settings', content: content, user: user }) %>
