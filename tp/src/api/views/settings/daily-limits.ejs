<%
const today = new Date().toISOString().split('T')[0];
const todayStats = limits.find(l => l.date === today) || {
  prospects_added: 0,
  emails_found: 0,
  blog_assets_found: 0,
  outreach_sent: 0
};

let content = `
<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">Daily Limits</li>
        </ol>
      </nav>
      <h1><i class="bi bi-calendar-check"></i> Daily Limits</h1>
      <p class="text-muted">Configure and manage daily operation limits</p>
    </div>
  </div>

  <!-- Daily Limit Settings -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-warning">
        <div class="card-header bg-warning text-dark">
          <i class="bi bi-gear"></i> Daily Limit Settings (Thresholds)
        </div>
        <div class="card-body">
          <p class="text-muted mb-3">Configure the maximum number of actions allowed per day. These limits control when the system stops automated operations.</p>
          <form method="POST" action="/settings/daily-limits/settings">
            <div class="row g-3">
              <div class="col-md-3">
                <label class="form-label">
                  <strong>Prospect Limit</strong>
                  <small class="d-block text-muted">Max companies per day</small>
                </label>
                <input type="number" name="prospect_limit" class="form-control" value="${limitSettings.prospect_limit}" min="1" max="1000" required>
              </div>
              <div class="col-md-3">
                <label class="form-label">
                  <strong>Email Limit</strong>
                  <small class="d-block text-muted">Max emails to extract per day</small>
                </label>
                <input type="number" name="email_limit" class="form-control" value="${limitSettings.email_limit}" min="1" max="1000" required>
              </div>
              <div class="col-md-3">
                <label class="form-label">
                  <strong>Blog Asset Limit</strong>
                  <small class="d-block text-muted">Max blog assets per day</small>
                </label>
                <input type="number" name="blog_limit" class="form-control" value="${limitSettings.blog_limit}" min="1" max="1000" required>
              </div>
              <div class="col-md-3">
                <label class="form-label">
                  <strong>Outreach Limit</strong>
                  <small class="d-block text-muted">Max outreach emails per day</small>
                </label>
                <input type="number" name="outreach_limit" class="form-control" value="${limitSettings.outreach_limit}" min="1" max="1000" required>
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-warning">
                  <i class="bi bi-save"></i> Save Limit Settings
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Today's Stats -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <h5><i class="bi bi-calendar-day"></i> Today's Progress</h5>
          <div class="row text-center mt-3">
            <div class="col-md-3">
              <h3>${todayStats.prospects_added} / ${limitSettings.prospect_limit}</h3>
              <small>Prospects</small>
            </div>
            <div class="col-md-3">
              <h3>${todayStats.emails_found} / ${limitSettings.email_limit}</h3>
              <small>Emails</small>
            </div>
            <div class="col-md-3">
              <h3>${todayStats.blog_assets_found} / ${limitSettings.blog_limit}</h3>
              <small>Blog Assets</small>
            </div>
            <div class="col-md-3">
              <h3>${todayStats.outreach_sent} / ${limitSettings.outreach_limit}</h3>
              <small>Outreach</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Update Today -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <i class="bi bi-pencil"></i> Update Today's Limits
        </div>
        <div class="card-body">
          <form method="POST" action="/settings/daily-limits/update">
            <input type="hidden" name="date" value="${today}">
            <div class="row g-3">
              <div class="col-md-3">
                <label class="form-label">Prospects Added</label>
                <input type="number" name="prospects_added" class="form-control" value="${todayStats.prospects_added}">
              </div>
              <div class="col-md-3">
                <label class="form-label">Emails Found</label>
                <input type="number" name="emails_found" class="form-control" value="${todayStats.emails_found}">
              </div>
              <div class="col-md-3">
                <label class="form-label">Blog Assets Found</label>
                <input type="number" name="blog_assets_found" class="form-control" value="${todayStats.blog_assets_found}">
              </div>
              <div class="col-md-3">
                <label class="form-label">Outreach Sent</label>
                <input type="number" name="outreach_sent" class="form-control" value="${todayStats.outreach_sent}">
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- History Table -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <i class="bi bi-clock-history"></i> Last 30 Days
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Prospects</th>
                  <th>Emails</th>
                  <th>Blog Assets</th>
                  <th>Outreach</th>
                </tr>
              </thead>
              <tbody>
${limits.map(limit => `
                <tr>
                  <td>${limit.date}</td>
                  <td>${limit.prospects_added}</td>
                  <td>${limit.emails_found}</td>
                  <td>${limit.blog_assets_found}</td>
                  <td>${limit.outreach_sent}</td>
                </tr>`).join('')}

${limits.length === 0 ? `
                <tr>
                  <td colspan="5" class="text-center text-muted py-4">No records found.</td>
                </tr>` : ''}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
`;
%>
<%- include('../layout', { title: 'Daily Limits - Settings', activePage: 'settings', content: content, user: user }) %>
