<%
let content = `
<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/settings/brands">Settings</a></li>
          <li class="breadcrumb-item active">Brands</li>
        </ol>
      </nav>
      <h1><i class="bi bi-tag"></i> Brands</h1>
      <p class="text-muted">Manage your brands</p>
    </div>
  </div>

  <!-- Add Brand Form -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <i class="bi bi-plus-circle"></i> Add New Brand
        </div>
        <div class="card-body">
          <form method="POST" action="/settings/brands" class="row g-3">
            <div class="col-md-5">
              <input type="text" name="name" class="form-control" placeholder="Brand Name" required>
            </div>
            <div class="col-md-5">
              <input type="url" name="website" class="form-control" placeholder="Website URL">
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-primary w-100">Add Brand</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Brands Table -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Website</th>
                  <th>SMTP Status</th>
                  <th>Campaigns</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
${brands.map(brand => `
                <tr>
                  <td>${brand.id}</td>
                  <td><strong>${brand.name}</strong></td>
                  <td>${brand.website ? `<a href="${brand.website}" target="_blank">${brand.website}</a>` : '-'}</td>
                  <td>
${brand.smtp_is_active && brand.smtp_host ? `
                    <span class="badge bg-success">
                      <i class="bi bi-envelope"></i> Active
                    </span>` : brand.smtp_host ? `
                    <span class="badge bg-warning">
                      <i class="bi bi-envelope"></i> Configured
                    </span>` : `
                    <span class="badge bg-secondary">
                      <i class="bi bi-dash-circle"></i> Not Set
                    </span>`}
                  </td>
                  <td><span class="badge bg-info">${brand.campaign_count || 0}</span></td>
                  <td>${new Date(brand.created_at).toLocaleDateString()}</td>
                  <td>
                    <a href="/settings/brands/${brand.id}/edit" class="btn btn-sm btn-outline-primary">
                      <i class="bi bi-pencil"></i>
                    </a>
                    <form method="POST" action="/settings/brands/${brand.id}/delete"
                      onsubmit="return confirm('Delete brand \"${brand.name}\"?${(brand.campaign_count || 0) > 0 ? ` This will also delete ${brand.campaign_count} associated campaign(s).` : ''}');"
                      style="display: inline;">
                      <button class="btn btn-sm btn-outline-danger" title="${(brand.campaign_count || 0) > 0 ? `Delete with ${brand.campaign_count} campaigns` : 'Delete brand'}">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>`).join('')}

${brands.length === 0 ? `
                <tr>
                  <td colspan="7" class="text-center text-muted py-4">No brands found.</td>
                </tr>` : ''}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
`;
%>
<%- include('../layout', { title: 'Brands - Settings', activePage: 'settings', content: content, user: user }) %>
